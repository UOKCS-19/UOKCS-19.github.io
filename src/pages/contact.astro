---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Contactform from "@components/contactform.astro";
import Pagetitle from "@components/pagetitle.astro";
---

<Layout title="Contact">
  <Container>
    <Pagetitle>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">We are a here to help.</Fragment>
    </Pagetitle>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h3 class="text-2xl font-bold mb-3">Contact</h3>
        <p class="mb-6">
          We are a here to help. Please send us a message and we will get back
          to you as soon as possible.
        </p>
        <div class="flex space-x-4">
          <a
            href="https://twitter.com/astrodotbuild"
            class="flex items-center justify-center text-gray-800 hover:text-gray-900 transition-colors duration-200"
          >
          </a>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
